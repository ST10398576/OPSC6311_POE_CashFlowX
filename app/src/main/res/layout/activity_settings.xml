<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    tools:context=".Settings">

    <EditText
        android:id="@+id/txOldPassword"
        android:layout_width="284dp"
        android:layout_height="53dp"
        android:backgroundTint="#E0FDFBFB"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="text"
        android:textColor="#D7CECE"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txConfirmNewPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txNewPassword"
        android:layout_width="284dp"
        android:layout_height="53dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#E0FDFBFB"
        android:ems="10"
        android:hint="New Password"
        android:inputType="text"
        android:textColor="#D7CECE"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ConfirmNewPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txConfirmNewPassword" />

    <EditText
        android:id="@+id/txConfirmNewPassword"
        android:layout_width="284dp"
        android:layout_height="53dp"
        android:layout_marginBottom="396dp"
        android:backgroundTint="#E0FDFBFB"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="text"
        android:textColor="#D7CECE"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="409dp"
        android:layout_height="112dp"
        android:background="@drawable/background_gradient"
        android:backgroundTintMode="add"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/Heading"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:text="Settings "
        android:textColor="#F8FFFFFF"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:text="Password Reset"
        android:textColor="#FAFFFFFF"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:layout_constraintVertical_bias="0.188" />

    <Button
        android:id="@+id/ConfirmNewPassword"
        android:layout_width="339dp"
        android:layout_height="44dp"
        android:layout_marginBottom="152dp"
        android:backgroundTint="#F7F80505"
        android:backgroundTintMode="add"
        android:text="Confirm New Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LogOutBtn"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:backgroundTint="#F7F80505"
        android:backgroundTintMode="add"
        android:text="LogOut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:layout_constraintVertical_bias="0.901" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="#5D1E1E"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:layout_constraintVertical_bias="0.973"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>