<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    tools:context=".Registration_Success">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="99dp"
        android:layout_height="86dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registersuccess_icon" />

    <TextView
        android:id="@+id/RegSuccBold"
        android:layout_width="191dp"
        android:layout_height="88dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="110dp"
        android:text="Registration Successful"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AccReg"
        android:layout_width="311dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="374dp"
        android:layout_marginEnd="50dp"
        android:text="Your account has been registered successfully"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnBackToLogin"
        android:layout_width="345dp"
        android:layout_height="59dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#F7F80505"
        android:backgroundTintMode="add"
        android:text="Go to Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AccMadeAlready"
        android:layout_width="234dp"
        android:layout_height="30dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="146dp"
        android:text="Already have an Account? Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>